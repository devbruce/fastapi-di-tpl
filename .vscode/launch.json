    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.main:create_app",
                "--port=32001",
                "--factory",
                "--reload",
            ],
            "jinja": true,
            "console": "internalConsole",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src:${PYTHONPATH}",
                "APP_ENV": "local",
                "APP_VERSION": "debug",
            }
        }
    ]
}
